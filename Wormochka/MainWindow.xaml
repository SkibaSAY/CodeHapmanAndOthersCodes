<Window x:Class="Wormochka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wormochka"
        mc:Ignorable="d"
        Title="MainWindow" Height="733.978" Width="1219.318">
    <Grid>
        <DockPanel x:Name="Dock" Background="#FFCF6565" VerticalAlignment="Stretch" Margin="0,0,0,0">
            <Menu Background="#FFE07C7C" DockPanel.Dock="Top" Height="35">
                <Button x:Name="RunHaphman" Content="Запустить" Height="35" AutomationProperties.Name="run" Padding="0,0,0,0" BorderThickness="0,0,0,0" Width="150"/>
            </Menu>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <ScrollViewer x:Name="inputView" Grid.Column="0" Background="#FF3F1C90" Margin="0,0,0,0"/>
                <ScrollViewer x:Name="codesView" Grid.Column="1" Background="#FF30C34E" Margin="0,0,0,0"/>
                <ScrollViewer x:Name="encryptView" Grid.Column="2" Background="#FFDAAC34" Margin="0,0,0,0"/>
                <ScrollViewer x:Name="decryptView" Grid.Column="3" Background="#AA3F1C90"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
